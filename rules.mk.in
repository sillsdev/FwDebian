#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/makefile.mk

DEB_SRCDIR = $(CURDIR)/fw
DEB_DESTDIR = $(CURDIR)/debian/tmp

DEB_BUILD_OPTIONS = nocheck
DEB_MAKE_EXTRA_ARGS = BUILD_TYPE=r BUILD_CONFIG=Release

DEB_MAKE_BUILD_TARGET   = Fw-build-package-fdo
DEB_MAKE_INSTALL_TARGET = install-package-fdo DESTDIR=$(DEB_DESTDIR)

DEB_SHLIBDEPS_INCLUDE = /usr/lib/fieldworks:/usr/lib/lfmerge/@DatabaseVersion@
DEB_DH_MAKESHLIBS_ARGS_ALL = -X/usr/lib/fieldworks/ -X/usr/lib/lfmerge/@DatabaseVersion@
DEB_DH_SHLIBDEPS_ARGS_ALL = -X/usr/lib/fieldworks/Firefox/
